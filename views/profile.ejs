      <h4>Information</h4>
      <br>
      <br>
      <h5>Birthday: <%= birthday %></h5>
      <br>
      <h5>Email: <%= email %></h5>
      <br>
      <h5>Mobile #: <%= mobile %></h5>
      <br>
      <h5>Grade: <%= grade %></h5>
      <br>
      <h5>Location: <%= city %>, <%= state %>, <%= country %></h5>
    </div>
  </div>

  <div class="row">
    <br>
    <div class="col-md-12">
      <p><%= reason %></p>

      <br>

      <p><%= goal %></p>
    </div>
  </div>

</div>

