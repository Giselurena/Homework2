<%- include('embeded/bootheader') -%>
<%- include('embeded/menubar') -%>

<div class="third-container">

  <div class="row">
    <div class="col-md-4">

      <div class="">
        <img class="profile-pic" src="https://i.pinimg.com/236x/e0/5e/06/e05e061bfc4c6e7799de4aac293a8223.jpg" width="300">
      </div>
      <br>
      <h4><%= firstname %> <%= lastname %></h4>
